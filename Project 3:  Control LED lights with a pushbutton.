void setup() {
  // put your setup code here, to run once:
  pinMode(12, INPUT);
  pinMode(9, OUTPUT);
  pinMode(2, OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
  if(digitalRead(12)==1){
    digitalWrite(9, HIGH);
    digitalWrite(2, HIGH);
    delay(1200);
  }
  if(digitalRead(12)==0){
    digitalWrite(9, LOW);
    digitalWrite(2, LOW);
  }
}
